<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo2"
    tools:context=".MainActivity">

    <!-- Buscador de país -->
    <EditText
        android:id="@+id/editTextBuscarPais"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/gradient2"
        android:gravity="center"
        android:hint="Buscar Ciudad o Pais"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textSize="20sp"
        android:textStyle="bold" />
    <View
        android:id="@+id/viewSeparador1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000" />

    <!-- ScrollView para la lista de países -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layoutPaises"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/linear1"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" />
    </ScrollView>

    <!-- Botón para crear ciudad -->
    <Button
        android:id="@+id/btnCrearCiudad"
        android:layout_width="match_parent"
        android:background="@drawable/popup_background"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Crear ciudad"/>
</LinearLayout>